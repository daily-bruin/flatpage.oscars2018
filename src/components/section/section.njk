{% for section in sections %}
  <section id="{{ section.id }}">
    <h2>{{ section.title }}</h2>
    <div class="grid">
      {% for article in section.articles %}
        <div class="article-card">
          <a href="{{ article.link }}">
            <img src="{{ article.image }}" alt="{{ article.image_alt }}">
            <h3>{{ article.headline }}</h3>
            <span>{{ article.authors }}</span>
            <p>{{ article.subhead }}</p>
          </a>
        </div>
      {% endfor %}
    </div>
  </section>
{% endfor %}
